{
    "name": "strawberrykit/strawberryphp",
    "type": "library",
    "description": "A simple PHP API router",
    "keywords": [
        "strawberrykit",
        "strawberryphp"
    ],
    "homepage": "https://github.com/strawberrykit/strawberryphp",
    "license": "MIT",
    "authors": [
        {
            "name": "Ken Terrado",
            "email": "strawberrykitproject@gmail.com",
            "homepage": "https://github.com/strawberrykit",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~8.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "strawberrykit\\strawberryphp\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "strawberrykit\\strawberryphp\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
